FROM python:3.13.7-alpine3.22

RUN apk update && apk add --no-cache \
    bash \
    bash-completion \
    cairo \
    g++ \
    gcc \
    git \
    linux-headers \
    musl-dev \
    openssh \
    pre-commit

RUN pip install --no-cache-dir poetry==2.1.4

RUN addgroup -g 1000 user && adduser -D -u 1000 -G user user
